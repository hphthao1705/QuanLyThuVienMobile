<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:backgroundTint="@color/blue"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_favourite_book"
                android:scaleType="centerInside"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/conan"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_tensach_favourite"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyển sách này sắp đến hạn"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txt_tacgia_favourite"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hết hạn trong 12/12/2002 nữa"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="0dp"
                android:tint="@color/red"
                android:src="@drawable/baseline_brightness_1_24" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>