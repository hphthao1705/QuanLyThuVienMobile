<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/lyt_linear"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/thao_bg_2"
        tools:context=".view.activities.RegisterActivity">

        <ImageButton
            android:id="@+id/btn_back"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="wrap_content"
            app:tint="@color/white"
            android:layout_marginBottom="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="#9922151F">

            <LinearLayout
                android:id="@+id/ll_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:id="@+id/loginText"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/rl_mssv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/txt_mssv"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/person"
                        android:drawablePadding="8dp"
                        android:hint="Mã số sinh viên"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/txt_name"
                        android:background="@drawable/custom_grey_40"
                        android:drawableLeft="@drawable/person_grey_40"
                        android:drawablePadding="8dp"
                        android:hint="Họ và tên"
                        android:padding="8dp"
                        android:textColor="@color/grey_40"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/grey_40"
                        android:enabled="false"/>
                </RelativeLayout>

<!--                <RadioGroup-->
<!--                    android:id="@+id/radio"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_marginTop="15dp">-->

<!--                    <RadioButton-->
<!--                        android:text="Nam"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/rad_nam"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:textColor="@color/white" />-->

<!--                    <RadioButton-->
<!--                        android:text="Nữ"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/rad_nu"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:textColor="@color/white" />-->
<!--                </RadioGroup>-->

                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/txt_email"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/person"
                        android:drawablePadding="8dp"
                        android:hint="Email"
                        android:textColorHint="@color/white"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:drawablePadding="8dp"
                        android:hint="Mật khẩu"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textColorHighlight="@color/cardview_dark_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_repass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/txt_repassword"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:drawablePadding="8dp"
                        android:hint="Nhập lại mật khẩu"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_dangky"
                    android:text="Đăng ký"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/blue1"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Bạn đã có tài khoản?"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/txt_dangky"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#9922151F"
                android:layout_marginBottom="35dp" />

            <TextView
                android:id="@+id/tvlogin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:text="Đăng nhập"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:background="#9922151F"
                android:layout_marginBottom="35dp" />

        </LinearLayout>
    </LinearLayout>
</layout>