<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TrangChuFragment">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:id="@+id/layout_chung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
<!--                    <androidx.cardview.widget.CardView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        app:cardCornerRadius="50dp">-->
<!--                        <ImageView-->
<!--                            android:id="@+id/img_logo"-->
<!--                            android:layout_width="50dp"-->
<!--                            android:layout_marginLeft="0dp"-->
<!--                            android:layout_height="50dp"-->
<!--                            android:background="@drawable/logo_hufi"-->
<!--                            />-->

<!--                    </androidx.cardview.widget.CardView>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape"
                            android:backgroundTint="@color/gray"
                            android:textColor="@color/black"
                            app:iconifiedByDefault="false"
                            app:queryHint="Tìm kiếm..." />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="360dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/img_book_home_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/img_book_home_1" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/img_book_home_2"
                                android:layout_width="413dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/img_book_home_2" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/img_book_home_3"
                                android:layout_width="413dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/img_book_home_3" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/img_book_home_4"
                                android:layout_width="410dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/img_book_home_4" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:id="@+id/img_book_home_5"
                                android:layout_width="410dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/img_book_home_5" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>








                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_img"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:text="THỂ LOẠI"-->
<!--                    android:textColor="@color/text_khoa"-->
<!--                    android:textSize="20dp"-->
<!--                    android:textStyle="bold" />-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    />




                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_TinHoc"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:background="#EDF8F8">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_tinhoc"
                                    tools:ignore="MissingClass" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Tin học"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_NgoaiNgu"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:background="#EDF8F8">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_ngoaingu"
                                    tools:ignore="MissingClass" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Ngoại ngữ"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <androidx.viewpager.widget.ViewPager

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_KeToan"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EDF8F8"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_ketoan"
                                    tools:ignore="MissingClass" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Kế toán"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_SinhHoc"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:background="#EDF8F8">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_sinhhoc"
                                    tools:ignore="MissingClass" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Sinh học"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_DetMay"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:background="#EDF8F8">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_detmay"
                                    tools:ignore="MissingClass" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Dệt may"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_DuLich"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:background="#EDF8F8">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_theloai_dulich"
                                    tools:ignore="MissingClass" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Du lịch"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_home_1"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Thịnh hành"
                    android:textColor="@color/text_khoa"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_khoa"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    app:fontFamily="monospace" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_trangchu"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:horizontalSpacing="10dp"
                android:scrollbars="vertical"
                android:verticalSpacing="20dp">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


    </ScrollView>

</FrameLayout>