<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragments.DetailsBookFragment">

        <LinearLayout
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:background="@color/blue1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="500dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_details_back"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_height="wrap_content"
                    app:tint="@color/white" />

                <ImageButton
                    android:layout_marginLeft="270dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/baseline_favorite_24"
                    app:tint="@color/red" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hinhsach_details"
                    android:layout_width="200dp"
                    android:background="@android:color/transparent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/conan" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tensach_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:text="Conan"
                android:textColor="@color/tan" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tacgia_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tác giả"
                android:textSize="20dp"
                android:textColor="@color/tan" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Đánh giá"
                        android:textColor="@color/tan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="4.9"
                        android:textColor="@color/tan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Trang"
                        android:textColor="@color/tan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="150"
                        android:textColor="@color/tan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"

                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Ngôn ngữ"
                        android:textColor="@color/tan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="VN"
                        android:textColor="@color/tan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"

                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Mượn"
                        android:textColor="@color/tan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="30"
                        android:textColor="@color/tan" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_gravity="center_horizontal"
            android:translationZ="2dp"
            android:layout_marginTop="-20dp"
            android:theme="@style/Theme.Button"
            android:background="@drawable/bg_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin sách"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Thông tin sách"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sách"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Mô tả sách"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>