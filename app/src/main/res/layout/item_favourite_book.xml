<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="35dp"
    android:layout_width="match_parent"
    android:backgroundTint="@color/orange"
    android:layout_height="120dp">
    <LinearLayout
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_favourite_book"
                android:scaleType="centerInside"
                android:background="@color/high_tan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/conan"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_tensach_favourite"
                android:textColor="@color/tan"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_tacgia_favourite"
                android:textSize="18dp"
                android:textColor="@color/tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả"
                />
            <Button
                android:id="@+id/btn_muonngay_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:backgroundTint="@color/high_tan"
                android:text="Mượn ngay"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>