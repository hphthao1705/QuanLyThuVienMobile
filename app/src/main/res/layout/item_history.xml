<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="muontra"
            type="com.example.qlthuvien.data.model.MuonTra" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:layout_height="100dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/openbook"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_mamuon"
                    android:layout_width="wrap_content"
                    android:text="Mã mượn"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ngày mượn"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:text="Tình trạng"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_ngaymuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17/7/2022"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:backgroundTint="@color/blue2"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_ngaytra"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/blue2"
                    android:paddingVertical="5dp"
                    android:text="Chưa trả"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>